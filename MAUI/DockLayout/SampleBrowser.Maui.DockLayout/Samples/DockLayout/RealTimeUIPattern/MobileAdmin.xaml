<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.DockLayout.SfDockLayout.MobileAdmin"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:dx="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:shimmer="clr-namespace:Syncfusion.Maui.Shimmer;assembly=Syncfusion.Maui.Core"
                      BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <localCore:SampleView.Resources>
        <!-- Light Mode Colors -->
        <Color x:Key="PrimaryBlue">#0D47A1</Color>
        <Color x:Key="SecondaryTeal">#009688</Color>
        <Color x:Key="AccentOrange">#FF6D00</Color>
        <Color x:Key="AccentRed">#D32F2F</Color>
        <Color x:Key="AccentGreen">#388E3C</Color>
        <Color x:Key="BackgroundLight">#F5F7FA</Color>
        <Color x:Key="CardBackgroundLight">#FFFFFF</Color>
        <Color x:Key="HeaderBackgroundLight">#FFFFFF</Color>
        <Color x:Key="FooterBackgroundLight">#FFFFFF</Color>
        <Color x:Key="BorderColorLight">#E0E0E0</Color>
        <Color x:Key="TextPrimaryLight">#212121</Color>
        <Color x:Key="TextSecondaryLight">#757575</Color>
        <Color x:Key="PlaceholderLight">#cccccc</Color>

        <!-- Dark Mode Colors -->
        <Color x:Key="PrimaryBlueDark">#1565C0</Color>
        <Color x:Key="SecondaryTealDark">#00897B</Color>
        <Color x:Key="AccentOrangeDark">#FF8F00</Color>
        <Color x:Key="AccentRedDark">#EF5350</Color>
        <Color x:Key="AccentGreenDark">#4CAF50</Color>
        <Color x:Key="BackgroundDark">#151515</Color>
        <Color x:Key="CardBackgroundDark">#2D2D2D</Color>
        <Color x:Key="HeaderBackgroundDark">#1E1E1E</Color>
        <Color x:Key="FooterBackgroundDark">#1E1E1E</Color>
        <Color x:Key="BorderColorDark">#3D3D3D</Color>
        <Color x:Key="TextPrimaryDark">#EEEEEE</Color>
        <Color x:Key="TextSecondaryDark">#AAAAAA</Color>
        <Color x:Key="PlaceholderDark">#3D3D3D</Color>
        <Color x:Key="iOSPlaceholderDark">#4A5568</Color>

        <!-- Styles -->
        <Style x:Key="PlaceholderStyle" TargetType="BoxView">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="BackgroundColor">
                <Setter.Value>
                    <AppThemeBinding>
                        <AppThemeBinding.Light>
                            <OnPlatform x:TypeArguments="Color">
                                <On Platform="iOS" Value="{StaticResource PlaceholderLight}" />
                                <On Platform="Android" Value="{StaticResource PlaceholderLight}" />
                            </OnPlatform>
                        </AppThemeBinding.Light>
                        <AppThemeBinding.Dark>
                            <OnPlatform x:TypeArguments="Color">
                                <On Platform="iOS" Value="{StaticResource iOSPlaceholderDark}" />
                                <On Platform="Android" Value="{StaticResource PlaceholderDark}" />
                            </OnPlatform>
                        </AppThemeBinding.Dark>
                    </AppThemeBinding>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="StrokeShape" Value="RoundRectangle 12,12,12,12" />
            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="Shadow">
                        <On Platform="iOS">
                            <Shadow Brush="{AppThemeBinding Light=#33000000, Dark=#cccccc}" 
                                    Radius="6" 
                                    Offset="0,2" 
                                    Opacity="{AppThemeBinding Dark=0.25}"/>
                        </On>
                        <On Platform="Android">
                            <Shadow Brush="{AppThemeBinding Light=#33000000, Dark=#cccccc}" 
                                    Radius="4" 
                                    Offset="2,4"
                                    Opacity="0.25"/>
                        </On>
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="StrokeShape" Value="RoundRectangle 8" />
            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="Shadow">
                        <On Platform="iOS">
                            <Shadow Brush="{AppThemeBinding Light=#33000000, Dark=#cccccc}" 
                             Radius="6" 
                             Offset="0,2"
                             Opacity="{AppThemeBinding Dark=0.25}"/>
                        </On>
                        <On Platform="Android">
                            <Shadow Brush="{AppThemeBinding Light=#33000000, Dark=#cccccc}" 
                                 Radius="4" 
                                 Offset="2,4"
                                 Opacity="0.25"/>
                        </On>
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavItemStyle" TargetType="VerticalStackLayout">
            <Setter Property="Spacing" Value="4" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <dx:SfDockLayout BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

            <!-- Top Header Bar -->
            <Border dx:SfDockLayout.Dock="Top"
                    HeightRequest="60"
                    BackgroundColor="{AppThemeBinding Light={StaticResource HeaderBackgroundLight}, Dark={StaticResource HeaderBackgroundDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                    StrokeThickness="1">
                <Grid ColumnDefinitions="Auto,*,Auto" Padding="16,0">
                    <!-- Menu/Hamburger Icon -->
                    <BoxView Grid.Column="0"
                             Style="{StaticResource PlaceholderStyle}" 
                             WidthRequest="24" 
                             HeightRequest="24" 
                             VerticalOptions="Center"/>

                    <!-- Title -->
                    <Label Grid.Column="1" 
                           Text="Dashboard" 
                           FontAttributes="Bold" 
                           FontSize="18"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <!-- User/Profile Icon -->
                    <BoxView Grid.Column="2"
                             Style="{StaticResource PlaceholderStyle}" 
                             WidthRequest="24" 
                             HeightRequest="24"
                             VerticalOptions="Center"/>
                </Grid>
            </Border>

            <!-- Bottom Navigation Bar -->
            <Border dx:SfDockLayout.Dock="Bottom"
                    HeightRequest="65"
                    BackgroundColor="{AppThemeBinding Light={StaticResource FooterBackgroundLight}, Dark={StaticResource FooterBackgroundDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                    StrokeThickness="1">
                <Grid ColumnDefinitions="*,*,*,*" Padding="10,5">
                    <!-- Home -->
                    <VerticalStackLayout Grid.Column="0" Style="{StaticResource NavItemStyle}">
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}"
                                StrokeShape="RoundRectangle 6,6,6,6" 
                                WidthRequest="30" 
                                HeightRequest="30">
                            <BoxView Style="{StaticResource PlaceholderStyle}"
                                     BackgroundColor="White"
                                     WidthRequest="16"
                                     HeightRequest="16"
                                     HorizontalOptions="Center" 
                                     VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Home" 
                               TextColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                               FontSize="12" 
                               FontAttributes="Bold"/>
                    </VerticalStackLayout>

                    <!-- Analytics -->
                    <VerticalStackLayout Grid.Column="1" Style="{StaticResource NavItemStyle}">
                        <Border BackgroundColor="{AppThemeBinding Light=#EDEDED, Dark=#414141}" 
                                StrokeShape="RoundRectangle 6,6,6,6" 
                                WidthRequest="30" 
                                HeightRequest="30">
                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                     WidthRequest="16" 
                                     HeightRequest="16" 
                                     HorizontalOptions="Center" 
                                     VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Analytics" 
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                               FontSize="12"/>
                    </VerticalStackLayout>

                    <!-- Notifications -->
                    <VerticalStackLayout Grid.Column="2" Style="{StaticResource NavItemStyle}">
                        <Border BackgroundColor="{AppThemeBinding Light=#EDEDED, Dark=#414141}" 
                                StrokeShape="RoundRectangle 6,6,6,6" 
                                WidthRequest="30" 
                                HeightRequest="30">
                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                     WidthRequest="16" 
                                     HeightRequest="16" 
                                     HorizontalOptions="Center" 
                                     VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Alerts" 
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                               FontSize="12"/>
                    </VerticalStackLayout>

                    <!-- Settings -->
                    <VerticalStackLayout Grid.Column="3" Style="{StaticResource NavItemStyle}">
                        <Border BackgroundColor="{AppThemeBinding Light=#EDEDED, Dark=#414141}" 
                                StrokeShape="RoundRectangle 6,6,6,6" 
                                WidthRequest="30" 
                                HeightRequest="30">
                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                     WidthRequest="16" 
                                     HeightRequest="16" 
                                     HorizontalOptions="Center" 
                                     VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Settings" 
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                               FontSize="12"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Left Side Drawer (collapsed by default, would be toggled via hamburger) -->
                <Border dx:SfDockLayout.Dock="Left"
                        WidthRequest="60"
                        BackgroundColor="{AppThemeBinding Light={StaticResource HeaderBackgroundLight}, Dark={StaticResource HeaderBackgroundDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                        StrokeThickness="1">
                <VerticalStackLayout Spacing="20" Padding="0,20">
                    <!-- App Logo/Brand Icon -->
                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}"
                            WidthRequest="40" 
                            HeightRequest="40"
                            StrokeShape="RoundRectangle 8,8,8,8"
                            HorizontalOptions="Center"
                            Margin="0,0,0,10">
                        <Label Text="A" 
                           FontAttributes="Bold" 
                           FontSize="22"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    </Border>

                    <!-- Navigation Items with Icons -->
                    <VerticalStackLayout Spacing="24" HorizontalOptions="Center">
                        <!-- Dashboard -->
                        <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                            <Border BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A365B}"
                        WidthRequest="36" 
                        HeightRequest="36"
                        StrokeShape="RoundRectangle 6,6,6,6"
                        HorizontalOptions="Center">
                                <BoxView Style="{StaticResource PlaceholderStyle}"
                             BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}"
                             WidthRequest="18"
                             HeightRequest="18"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Home" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}"/>
                        </VerticalStackLayout>

                        <!-- Reports -->
                        <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                            <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#333333}"
                        WidthRequest="36" 
                        HeightRequest="36"
                        StrokeShape="RoundRectangle 6,6,6,6"
                        HorizontalOptions="Center">
                                <BoxView Style="{StaticResource PlaceholderStyle}"
                             WidthRequest="18"
                             HeightRequest="18"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Reports" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>

                        <!-- Products -->
                        <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                            <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#333333}"
                        WidthRequest="36" 
                        HeightRequest="36"
                        StrokeShape="RoundRectangle 6,6,6,6"
                        HorizontalOptions="Center">
                                <BoxView Style="{StaticResource PlaceholderStyle}"
                             WidthRequest="18"
                             HeightRequest="18"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Products" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>

                        <!-- Users -->
                        <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                            <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#333333}"
                        WidthRequest="36" 
                        HeightRequest="36"
                        StrokeShape="RoundRectangle 6,6,6,6"
                        HorizontalOptions="Center"
                        Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                        StrokeThickness="1">
                                <Grid>
                                    <BoxView Style="{StaticResource PlaceholderStyle}"
                                 WidthRequest="18"
                                 HeightRequest="18"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center"/>
                                    <!-- Notification Indicator -->
                                    <Ellipse Fill="{AppThemeBinding Light={StaticResource AccentRed}, Dark={StaticResource AccentRedDark}}"
                                 WidthRequest="7"
                                 HeightRequest="7"
                                 HorizontalOptions="End"
                                 VerticalOptions="Start"
                                 Margin="0,6,6,0"/>
                                </Grid>
                            </Border>
                            <Label Text="Users" 
                       FontSize="10" 
                       HorizontalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>

                    <!-- Bottom help/support icon -->
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center" VerticalOptions="End" Margin="0,80,0,0">
                        <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#333333}"
                    WidthRequest="36" 
                    HeightRequest="36"
                    StrokeShape="RoundRectangle 6,6,6,6"
                    HorizontalOptions="Center">
                            <BoxView Style="{StaticResource PlaceholderStyle}"
                         WidthRequest="18"
                         HeightRequest="18"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"/>
                        </Border>
                        <Label Text="Help" 
                   FontSize="10" 
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
            
            <!-- Main Content Area -->
            <ScrollView>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                      Padding="16,20" 
                      RowSpacing="16">

                    <!-- Welcome Section -->
                    <VerticalStackLayout Grid.Row="0" Spacing="4">
                        <Label Text="Welcome back" 
                               TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                               FontSize="14"/>
                        <Label Text="Admin panel" 
                               FontSize="22" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                    </VerticalStackLayout>

                    <!-- Summary Cards Row -->
                    <Grid Grid.Row="1" 
                          ColumnDefinitions="*,*" 
                          ColumnSpacing="12">

                        <!-- Users Card -->
                        <Border Grid.Column="0" 
                                Style="{StaticResource StatCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <BoxView Style="{StaticResource PlaceholderStyle}"
                                         BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A365B}" 
                                         WidthRequest="36" 
                                         HeightRequest="36"
                                         CornerRadius="18" 
                                         HorizontalOptions="Start"/>

                                <shimmer:SfShimmer Grid.Row="1" IsActive="False" Background="Transparent">
                                    <shimmer:SfShimmer.Content>
                                        <Label Text="2,451" 
                                               FontSize="24" 
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}"/>
                                    </shimmer:SfShimmer.Content>
                                </shimmer:SfShimmer>

                                <Label Grid.Row="2" 
                                       Text="Active users" 
                                       FontSize="14" 
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                            </Grid>
                        </Border>

                        <!-- Revenue Card -->
                        <Border Grid.Column="1" 
                                Style="{StaticResource StatCardStyle}">
                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                         BackgroundColor="{AppThemeBinding Light=#E0F2F1, Dark=#1A3B39}" 
                                         WidthRequest="36" 
                                         HeightRequest="36" 
                                         CornerRadius="18" 
                                         HorizontalOptions="Start"/>

                                <shimmer:SfShimmer Grid.Row="1" IsActive="False" Background="Transparent">
                                    <shimmer:SfShimmer.Content>
                                        <Label Text="$18.3K" 
                                               FontSize="24" 
                                               FontAttributes="Bold"
                                               TextColor="{AppThemeBinding Light={StaticResource SecondaryTeal}, Dark={StaticResource SecondaryTealDark}}"/>
                                    </shimmer:SfShimmer.Content>
                                </shimmer:SfShimmer>

                                <Label Grid.Row="2" 
                                       Text="Revenue" 
                                       FontSize="14" 
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Chart Card -->
                    <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="16">
                        <VerticalStackLayout Spacing="15">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label Text="Weekly analytics" 
                                       FontSize="16" 
                                       FontAttributes="Bold" 
                                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                                <BoxView Grid.Column="1" 
                                         Style="{StaticResource PlaceholderStyle}" 
                                         WidthRequest="20" 
                                         HeightRequest="20"/>
                            </Grid>

                            <shimmer:SfShimmer IsActive="False" Background="Transparent">
                                <shimmer:SfShimmer.Content>
                                    <!-- Chart placeholder -->
                                    <Grid HeightRequest="160">
                                        <!-- Chart bars -->
                                        <Grid ColumnDefinitions="*,*,*,*,*,*,*" 
                                              ColumnSpacing="12" 
                                              VerticalOptions="End">

                                            <BoxView Grid.Column="0" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                                     HeightRequest="60" 
                                                     CornerRadius="4"/>

                                            <BoxView Grid.Column="1" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                                     HeightRequest="90" 
                                                     CornerRadius="4"/>

                                            <BoxView Grid.Column="2" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                                     HeightRequest="70" 
                                                     CornerRadius="4"/>

                                            <BoxView Grid.Column="3" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource AccentOrange}, Dark={StaticResource AccentOrangeDark}}" 
                                                     HeightRequest="120" 
                                                     CornerRadius="4"/>

                                            <BoxView Grid.Column="4" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                                     HeightRequest="80" 
                                                     CornerRadius="4"/>

                                            <BoxView Grid.Column="5" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                                     HeightRequest="100" 
                                                     CornerRadius="4"/>

                                            <BoxView Grid.Column="6" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                                     HeightRequest="50" 
                                                     CornerRadius="4"/>
                                        </Grid>

                                        <!-- Line for axis -->
                                        <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                 HeightRequest="1" 
                                                 VerticalOptions="End"/>
                                    </Grid>
                                </shimmer:SfShimmer.Content>
                            </shimmer:SfShimmer>

                            <!-- Legend -->
                            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                                <HorizontalStackLayout Spacing="5">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" 
                                             BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBlue}, Dark={StaticResource PrimaryBlueDark}}" 
                                             WidthRequest="12" 
                                             HeightRequest="12"/>

                                    <Label Text="Sales" 
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                                           FontSize="12"/>
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Spacing="5">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" 
                                             BackgroundColor="{AppThemeBinding Light={StaticResource AccentOrange}, Dark={StaticResource AccentOrangeDark}}" 
                                             WidthRequest="12" 
                                             HeightRequest="12"/>

                                    <Label Text="Peak day" 
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" 
                                           FontSize="12"/>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Recent Activity Card -->
                    <Border Grid.Row="3" Style="{StaticResource CardStyle}" Padding="16">
                        <VerticalStackLayout Spacing="15">
                            <Label Text="Recent activity" 
                                   FontSize="16" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>

                            <shimmer:SfShimmer IsActive="False" Background="Transparent">
                                <shimmer:SfShimmer.Content>
                                    <VerticalStackLayout Spacing="12">
                                        <!-- Activity Item 1 -->
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                            <BoxView Grid.Column="0" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1E3620}" 
                                                     WidthRequest="32" 
                                                     HeightRequest="32" 
                                                     CornerRadius="16"/>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                         WidthRequest="120" 
                                                         HeightRequest="14"/>

                                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                         WidthRequest="80" 
                                                         HeightRequest="12"/>
                                            </VerticalStackLayout>

                                            <BoxView Grid.Column="2" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     WidthRequest="50" 
                                                     HeightRequest="16" 
                                                     VerticalOptions="Center"/>
                                        </Grid>

                                        <!-- Activity Item 2 -->
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                            <BoxView Grid.Column="0" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#3C1F1F}" 
                                                     WidthRequest="32" 
                                                     HeightRequest="32" 
                                                     CornerRadius="16"/>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                         WidthRequest="150" 
                                                         HeightRequest="14"/>

                                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                         WidthRequest="90" 
                                                         HeightRequest="12"/>
                                            </VerticalStackLayout>

                                            <BoxView Grid.Column="2" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     WidthRequest="50" 
                                                     HeightRequest="16" 
                                                     VerticalOptions="Center"/>
                                        </Grid>

                                        <!-- Activity Item 3 -->
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                            <BoxView Grid.Column="0" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1A365B}" 
                                                     WidthRequest="32" 
                                                     HeightRequest="32" 
                                                     CornerRadius="16"/>

                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                         WidthRequest="140" 
                                                         HeightRequest="14"/>

                                                <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                         WidthRequest="70" 
                                                         HeightRequest="12"/>
                                            </VerticalStackLayout>

                                            <BoxView Grid.Column="2" 
                                                     Style="{StaticResource PlaceholderStyle}" 
                                                     WidthRequest="50" 
                                                     HeightRequest="16" 
                                                     VerticalOptions="Center"/>
                                        </Grid>
                                    </VerticalStackLayout>
                                </shimmer:SfShimmer.Content>
                            </shimmer:SfShimmer>

                            <Border BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3D3D3D}" 
                                    StrokeShape="RoundRectangle 6,6,6,6" 
                                    HeightRequest="40" 
                                    Padding="0,10">
                                <Label Text="View all activities" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
                            </Border>
                        </VerticalStackLayout>
                    </Border>
                </Grid>
            </ScrollView>
        </dx:SfDockLayout>
    </localCore:SampleView.Content>
</localCore:SampleView>