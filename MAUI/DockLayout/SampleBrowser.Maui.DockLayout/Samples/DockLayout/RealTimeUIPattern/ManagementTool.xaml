<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.DockLayout.SfDockLayout.ManagementTool"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:dx="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:shimmer="clr-namespace:Syncfusion.Maui.Shimmer;assembly=Syncfusion.Maui.Core"
                      BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <localCore:SampleView.Resources>
        <!-- Light Mode Colors -->
        <Color x:Key="PrimaryAccent">#6264A7</Color>
        <Color x:Key="SecondaryAccent">#4AC3BE</Color>
        <Color x:Key="TertiaryAccent">#FF8A3D</Color>
        <Color x:Key="QuaternaryAccent">#8359DF</Color>
        <Color x:Key="HeaderBackgroundLight">#F3F2F1</Color>
        <Color x:Key="NavigationBackgroundLight">#F9F8F7</Color>
        <Color x:Key="ContentBackgroundLight">#FFFFFF</Color>
        <Color x:Key="BorderColorLight">#E1DFDD</Color>
        <Color x:Key="ActiveItemBgLight">#EEF4FF</Color>
        <Color x:Key="PlaceholderLight">#E6E6E6</Color>
        <Color x:Key="AvatarPlaceholderLight">#D2D0CE</Color>

        <!-- Dark Mode Colors -->
        <Color x:Key="PrimaryAccentDark">#6E71C4</Color>
        <Color x:Key="SecondaryAccentDark">#4ED4CF</Color>
        <Color x:Key="TertiaryAccentDark">#FF9E5E</Color>
        <Color x:Key="QuaternaryAccentDark">#A285F8</Color>
        <Color x:Key="HeaderBackgroundDark">#292827</Color>
        <Color x:Key="NavigationBackgroundDark">#201F1E</Color>
        <Color x:Key="ContentBackgroundDark">#2D2C2B</Color>
        <Color x:Key="BorderColorDark">#484644</Color>
        <Color x:Key="ActiveItemBgDark">#344472</Color>
        <Color x:Key="PlaceholderDark">#4D4B49</Color>
        <Color x:Key="AvatarPlaceholderDark">#5D5B58</Color>

        <!-- Common Styles -->
        <Style x:Key="AvatarStyle" TargetType="Ellipse">
            <Setter Property="WidthRequest" Value="28" />
            <Setter Property="HeightRequest" Value="28" />
            <Setter Property="Fill" Value="{AppThemeBinding Light={StaticResource AvatarPlaceholderLight}, Dark={StaticResource AvatarPlaceholderDark}}" />
            <Setter Property="Stroke" Value="Transparent" />
        </Style>

        <Style x:Key="PlaceholderStyle" TargetType="BoxView">
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource PlaceholderLight}, Dark={StaticResource PlaceholderDark}}" />
        </Style>

        <Style x:Key="ModuleCardStyle" TargetType="Border">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ContentBackgroundLight}, Dark={StaticResource ContentBackgroundDark}}" />
            <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape" Value="RoundRectangle 8,8,8,8" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="{AppThemeBinding Light=#20000000, Dark=#40000000}" Offset="0,2" Radius="4" Opacity="0.5" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavItemStyle" TargetType="Grid">
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="HeightRequest" Value="42" />
        </Style>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <dx:SfDockLayout>
            <!-- Top Toolbar/Header -->
            <Border dx:SfDockLayout.Dock="Top" 
                    HeightRequest="{OnPlatform WinUI=60, MacCatalyst=72}" 
                    BackgroundColor="{AppThemeBinding Light={StaticResource HeaderBackgroundLight}, Dark={StaticResource HeaderBackgroundDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}"
                    StrokeThickness="1">
                <Grid ColumnDefinitions="Auto,*,Auto" Padding="16,0">
                    <!-- App Logo / Brand -->
                    <Border Grid.Column="0"
                            BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" 
                            WidthRequest="180" HeightRequest="{OnPlatform WinUI=40, MacCatalyst=48}"
                            Stroke="Transparent" 
                            StrokeShape="RoundRectangle 4,4,4,4">
                        <Label Text="Task Management" Margin="2"
                               TextColor="White" 
                               FontAttributes="Bold"
                               FontSize="{OnPlatform WinUI=14, MacCatalyst=16}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Border>

                    <!-- Center navigation -->
                    <HorizontalStackLayout Grid.Column="1" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" 
                                           Spacing="24">
                        <!-- Navigation items -->
                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="70" HeightRequest="{OnPlatform WinUI=24, MacCatalyst=30}" />
                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="70" HeightRequest="{OnPlatform WinUI=24, MacCatalyst=30}" />
                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="70" HeightRequest="{OnPlatform WinUI=24, MacCatalyst=30}" />
                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="70" HeightRequest="{OnPlatform WinUI=24, MacCatalyst=30}" />
                    </HorizontalStackLayout>

                    <!-- Right action items -->
                    <HorizontalStackLayout Grid.Column="2" 
                                           VerticalOptions="Center" 
                                           Spacing="15">
                        <!-- Collaborators/Avatars -->
                        <HorizontalStackLayout Spacing="-10">
                            <Ellipse Style="{StaticResource AvatarStyle}" />
                            <Ellipse Style="{StaticResource AvatarStyle}" />
                            <Ellipse Style="{StaticResource AvatarStyle}" />
                            <Border BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}"
                                    WidthRequest="28" HeightRequest="28" 
                                    StrokeShape="RoundRectangle 14,14,14,14">
                                <Label Text="+2" TextColor="White" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" 
                                       FontSize="12" />
                            </Border>
                        </HorizontalStackLayout>

                        <!-- Action buttons -->
                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="{OnPlatform WinUI=36, MacCatalyst=42}" HeightRequest="{OnPlatform WinUI=36, MacCatalyst=42}" CornerRadius="{OnPlatform WinUI=18, MacCatalyst=21}" />
                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="{OnPlatform WinUI=36, MacCatalyst=42}" HeightRequest="{OnPlatform WinUI=36, MacCatalyst=42}" CornerRadius="{OnPlatform WinUI=18, MacCatalyst=21}" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Left Navigation Panel -->
            <Border dx:SfDockLayout.Dock="Left" 
                    WidthRequest="{OnPlatform Default=220, MacCatalyst=320}" 
                    BackgroundColor="{AppThemeBinding Light={StaticResource NavigationBackgroundLight}, Dark={StaticResource NavigationBackgroundDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" 
                    StrokeThickness="1">
                <Grid RowDefinitions="Auto,*,Auto" Padding="0,15">
                    <!-- Search -->
                    <Border Grid.Row="0" 
                            Padding="{OnPlatform WinUI='10,8', MacCatalyst='12,10'}" 
                            Margin="15,0,15,15" 
                            Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" 
                            StrokeThickness="1" 
                            StrokeShape="RoundRectangle 6,6,6,6">
                        <HorizontalStackLayout Spacing="10">
                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="20" HeightRequest="20" />
                            <Label Text="Search" TextColor="#AAAAAA" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Navigation Sections -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="16" Margin="10,0">
                            <!-- Section Heading -->
                            <Label Text="Sections" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" FontAttributes="Bold" Margin="5,0,0,5" Opacity="0.7" />

                            <!-- Section items -->
                            <Grid Style="{StaticResource NavItemStyle}" 
                                  BackgroundColor="{AppThemeBinding Light={StaticResource ActiveItemBgLight}, Dark={StaticResource ActiveItemBgDark}}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" 
                                             BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" 
                                             WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Home" VerticalOptions="Center" FontAttributes="Bold"
                                           TextColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Grid Style="{StaticResource NavItemStyle}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Workspaces" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Grid Style="{StaticResource NavItemStyle}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Recent" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Grid Style="{StaticResource NavItemStyle}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Saved" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Label Text="SUB PAGES" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" FontAttributes="Bold" Margin="5,15,0,5" Opacity="0.7" />

                            <Grid Style="{StaticResource NavItemStyle}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" 
                                             BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryAccent}, Dark={StaticResource SecondaryAccentDark}}" 
                                             WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Project Alpha" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Grid Style="{StaticResource NavItemStyle}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" 
                                             BackgroundColor="{AppThemeBinding Light={StaticResource TertiaryAccent}, Dark={StaticResource TertiaryAccentDark}}" 
                                             WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Marketing Plan" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>

                            <Grid Style="{StaticResource NavItemStyle}">
                                <HorizontalStackLayout Spacing="12">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" 
                                             BackgroundColor="{AppThemeBinding Light={StaticResource QuaternaryAccent}, Dark={StaticResource QuaternaryAccentDark}}" 
                                             WidthRequest="16" HeightRequest="16" />
                                    <Label Text="Product Roadmap" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </ScrollView>

                    <!-- Bottom actions -->
                    <VerticalStackLayout Grid.Row="2" Margin="15,10,15,0">
                        <BoxView Style="{StaticResource PlaceholderStyle}" HeightRequest="{OnPlatform WinUI=40, MacCatalyst=48}" Margin="0,0,0,10" />
                        <BoxView Style="{StaticResource PlaceholderStyle}" HeightRequest="1" Margin="0,10" />
                        <Grid HeightRequest="{OnPlatform WinUI=50, MacCatalyst=60}">
                            <HorizontalStackLayout VerticalOptions="Center" Spacing="10">
                                <Ellipse Style="{StaticResource AvatarStyle}" />
                                <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="90" HeightRequest="18" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Right sidebar - Tasks/Tags -->
            <Border dx:SfDockLayout.Dock="Right" 
                    WidthRequest="{OnPlatform Default=280, MacCatalyst=480}" 
                    BackgroundColor="{AppThemeBinding Light={StaticResource NavigationBackgroundLight}, Dark={StaticResource NavigationBackgroundDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" 
                    StrokeThickness="1">
                <Grid RowDefinitions="Auto,*" Padding="15">
                    <!-- Section Header -->
                    <VerticalStackLayout Grid.Row="0" Spacing="15" Margin="0,0,0,15">
                        <Label Text="Workspace Tasks" FontSize="{OnPlatform WinUI=14, MacCatalyst=16}" FontAttributes="Bold" />

                        <!-- Filter Options -->
                        <HorizontalStackLayout Spacing="10">
                            <Border Padding="{OnPlatform WinUI='8,4', MacCatalyst='10,6'}" BackgroundColor="{AppThemeBinding Light={StaticResource ActiveItemBgLight}, Dark={StaticResource ActiveItemBgDark}}" 
                                    StrokeShape="RoundRectangle 12,12,12,12">
                                <HorizontalStackLayout Spacing="5">
                                    <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="12" HeightRequest="12" />
                                    <Label Text="All" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" VerticalOptions="Center" />
                                </HorizontalStackLayout>
                            </Border>

                            <Border Padding="{OnPlatform WinUI='8,4', MacCatalyst='10,6'}" Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" 
                                    StrokeThickness="1" StrokeShape="RoundRectangle 12,12,12,12">
                                <Label Text="In Progress" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" VerticalOptions="Center" />
                            </Border>

                            <Border Padding="{OnPlatform WinUI='8,4', MacCatalyst='10,6'}" Stroke="{AppThemeBinding Light={StaticResource BorderColorLight}, Dark={StaticResource BorderColorDark}}" 
                                    StrokeThickness="1" StrokeShape="RoundRectangle 12,12,12,12">
                                <Label Text="Done" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" VerticalOptions="Center" />
                            </Border>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- Task List -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="12">
                            <!-- Task Items -->
                            <VerticalStackLayout Spacing="12">
                                <Border Style="{StaticResource ModuleCardStyle}" Padding="12">
                                    <VerticalStackLayout Spacing="8">
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="140" HeightRequest="18" />
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="200" HeightRequest="12" />
                                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" 
                                                     WidthRequest="60" HeightRequest="20" />
                                            <Ellipse Style="{StaticResource AvatarStyle}" WidthRequest="20" HeightRequest="20" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>

                                <Border Style="{StaticResource ModuleCardStyle}" Padding="12">
                                    <VerticalStackLayout Spacing="8">
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="160" HeightRequest="18" />
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="200" HeightRequest="12" />
                                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryAccent}, Dark={StaticResource SecondaryAccentDark}}" 
                                                     WidthRequest="60" HeightRequest="20" />
                                            <Ellipse Style="{StaticResource AvatarStyle}" WidthRequest="20" HeightRequest="20" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Priority Task -->
                                <Border Style="{StaticResource ModuleCardStyle}" Padding="12" 
                                        BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#3E2C1D}" 
                                        Stroke="{AppThemeBinding Light=#FFE0B2, Dark=#F57C00}">
                                    <VerticalStackLayout Spacing="8">
                                        <HorizontalStackLayout Spacing="8">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="120" HeightRequest="18" />
                                            <Border BackgroundColor="{AppThemeBinding Light=#FFCCBC, Dark=#5E3F35}" Padding="5,2" 
                                                    StrokeShape="RoundRectangle 4,4,4,4">
                                                <Label Text="Urgent" FontSize="10" TextColor="{AppThemeBinding Light=#E64A19, Dark=#FF7043}" />
                                            </Border>
                                        </HorizontalStackLayout>
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="200" HeightRequest="12" />
                                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource TertiaryAccent}, Dark={StaticResource TertiaryAccentDark}}" 
                                                     WidthRequest="60" HeightRequest="20" />
                                            <Ellipse Style="{StaticResource AvatarStyle}" WidthRequest="20" HeightRequest="20" Fill="{AppThemeBinding Light=#FFAB91, Dark=#BF360C}" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>

                                <Border Style="{StaticResource ModuleCardStyle}" Padding="12">
                                    <VerticalStackLayout Spacing="8">
                                        <HorizontalStackLayout Spacing="8">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="180" HeightRequest="18" />
                                            <Border BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#253C27}" Padding="5,2" 
                                                    StrokeShape="RoundRectangle 4,4,4,4">
                                            </Border>
                                        </HorizontalStackLayout>
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="200" HeightRequest="12" />
                                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource QuaternaryAccent}, Dark={StaticResource QuaternaryAccentDark}}" 
                                                     WidthRequest="60" HeightRequest="20" />
                                            <Ellipse Style="{StaticResource AvatarStyle}" WidthRequest="20" HeightRequest="20" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>

                                <!-- Task with attachment -->
                                <Border Style="{StaticResource ModuleCardStyle}" Padding="12">
                                    <VerticalStackLayout Spacing="8">
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="150" HeightRequest="18" />
                                        <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="190" HeightRequest="12" />
                                        <Border Padding="8,5" Margin="0,5,0,0"
                                                BackgroundColor="{AppThemeBinding Light=#F5F9FF, Dark=#1A2846}"
                                                StrokeShape="RoundRectangle 4,4,4,4">
                                            <HorizontalStackLayout Spacing="8">
                                                <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="16" HeightRequest="16" />
                                                <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="120" HeightRequest="12" />
                                            </HorizontalStackLayout>
                                        </Border>
                                        <HorizontalStackLayout Spacing="10" Margin="0,5,0,0">
                                            <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                     BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryAccent}, Dark={StaticResource SecondaryAccentDark}}" 
                                                     WidthRequest="60" HeightRequest="20" />
                                            <Ellipse Style="{StaticResource AvatarStyle}" WidthRequest="20" HeightRequest="20" />
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>

            <!-- Main content area -->
            <ScrollView>
                <Grid RowDefinitions="Auto,*" Padding="{OnPlatform WinUI=20, MacCatalyst=24}">
                    <!-- Content Header with breadcrumb -->
                    <VerticalStackLayout Grid.Row="0" Spacing="10">
                        <HorizontalStackLayout Spacing="5">
                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="40" HeightRequest="12" />
                            <Label Text="/" TextColor="#AAAAAA" />
                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="40" HeightRequest="12" />
                            <Label Text="/" TextColor="#AAAAAA" />
                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="60" HeightRequest="12" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout Spacing="15">
                            <Label Text="Project Dashboard" FontSize="{OnPlatform WinUI=24, MacCatalyst=28}" FontAttributes="Bold" />
                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="18" HeightRequest="18" CornerRadius="9" VerticalOptions="Center" />
                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="18" HeightRequest="18" CornerRadius="9" VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <BoxView Style="{StaticResource PlaceholderStyle}" HeightRequest="1" Margin="0,5" />
                    </VerticalStackLayout>

                    <!-- Modules grid -->
                    <ScrollView Grid.Row="1">
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" Margin="0,10" ColumnSpacing="{OnPlatform WinUI=15, MacCatalyst=18}" RowSpacing="{OnPlatform WinUI=15, MacCatalyst=18}">
                            <!-- Module 1 - Chart/Stats -->
                            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource ModuleCardStyle}">
                                <Grid RowDefinitions="Auto,*" Padding="15">
                                    <HorizontalStackLayout Spacing="10" Grid.Row="0">
                                        <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                 BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" 
                                                 WidthRequest="20" HeightRequest="20" CornerRadius="4" />
                                        <Label Text="Project Stats" FontAttributes="Bold" VerticalOptions="Center" />
                                        <BoxView Grid.Row="0" Style="{StaticResource PlaceholderStyle}" WidthRequest="18" HeightRequest="18" CornerRadius="9" HorizontalOptions="End" />
                                    </HorizontalStackLayout>

                                    <Grid Grid.Row="1" RowDefinitions="Auto,*" Margin="0,15,0,0">
                                        <HorizontalStackLayout Spacing="20">
                                            <VerticalStackLayout>
                                                <Label Text="67%" FontSize="{OnPlatform WinUI=20, MacCatalyst=24}" FontAttributes="Bold" 
                                                       TextColor="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" />
                                                <Label Text="Progress" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" Opacity="0.7" />
                                            </VerticalStackLayout>

                                            <BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="1" HeightRequest="40" />

                                            <VerticalStackLayout>
                                                <Label Text="12" FontSize="{OnPlatform WinUI=20, MacCatalyst=24}" FontAttributes="Bold" 
                                                       TextColor="{AppThemeBinding Light={StaticResource TertiaryAccent}, Dark={StaticResource TertiaryAccentDark}}" />
                                                <Label Text="Tasks" FontSize="{OnPlatform WinUI=12, MacCatalyst=14}" Opacity="0.7" />
                                            </VerticalStackLayout>
                                        </HorizontalStackLayout>

                                        <!-- Simplified chart placeholder - just columns -->
                                        <Grid HeightRequest="150" Grid.Row="1" Margin="0,20,0,0">
                                            <!-- Simple bar chart -->
                                            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" VerticalOptions="End">
                                                <!-- Monday -->
                                                <Grid WidthRequest="32" HeightRequest="120" VerticalOptions="End">
                                                    <Rectangle Fill="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="32" HeightRequest="90" VerticalOptions="End" />
                                                    <Rectangle Fill="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="32" HeightRequest="60" VerticalOptions="End" />
                                                </Grid>
                                                
                                                <!-- Tuesday -->
                                                <Grid WidthRequest="32" HeightRequest="120" VerticalOptions="End">
                                                    <Rectangle Fill="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="32" HeightRequest="100" VerticalOptions="End" />
                                                    <Rectangle Fill="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="32" HeightRequest="80" VerticalOptions="End" />
                                                </Grid>
                                                
                                                <!-- Wednesday -->
                                                <Grid WidthRequest="32" HeightRequest="120" VerticalOptions="End">
                                                    <Rectangle Fill="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="32" HeightRequest="60" VerticalOptions="End" />
                                                    <Rectangle Fill="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="32" HeightRequest="40" VerticalOptions="End" />
                                                </Grid>
                                                
                                                <!-- Thursday -->
                                                <Grid WidthRequest="32" HeightRequest="120" VerticalOptions="End">
                                                    <Rectangle Fill="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="32" HeightRequest="120" VerticalOptions="End" />
                                                    <Rectangle Fill="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="32" HeightRequest="85" VerticalOptions="End" />
                                                </Grid>
                                                
                                                <!-- Friday -->
                                                <Grid WidthRequest="32" HeightRequest="120" VerticalOptions="End">
                                                    <Rectangle Fill="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="32" HeightRequest="80" VerticalOptions="End" />
                                                    <Rectangle Fill="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="32" HeightRequest="55" VerticalOptions="End" />
                                                </Grid>
                                                
                                                <!-- Saturday -->
                                                <Grid WidthRequest="32" HeightRequest="120" VerticalOptions="End">
                                                    <Rectangle Fill="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="32" HeightRequest="45" VerticalOptions="End" />
                                                    <Rectangle Fill="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="32" HeightRequest="30" VerticalOptions="End" />
                                                </Grid>
                                            </HorizontalStackLayout>
                                            
                                            <!-- Simple legend -->
                                            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" VerticalOptions="Start">
                                                <HorizontalStackLayout Spacing="5">
                                                    <BoxView Color="{AppThemeBinding Light={StaticResource PrimaryAccent}, Dark={StaticResource PrimaryAccentDark}}" WidthRequest="14" HeightRequest="14" />
                                                    <Label Text="Completed" FontSize="12" VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Spacing="5">
                                                    <BoxView Color="{AppThemeBinding Light=#EEF4FF, Dark=#344472}" WidthRequest="14" HeightRequest="14" />
                                                    <Label Text="Total" FontSize="12" VerticalOptions="Center" />
                                                </HorizontalStackLayout>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Module 2 - Table -->
                            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource ModuleCardStyle}">
                                <Grid RowDefinitions="Auto,*" Padding="15">
                                    <HorizontalStackLayout Spacing="10" Grid.Row="0">
                                        <BoxView Style="{StaticResource PlaceholderStyle}" 
                                                 BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryAccent}, Dark={StaticResource SecondaryAccentDark}}" 
                                                 WidthRequest="20" HeightRequest="20" CornerRadius="4" />
                                        <Label Text="Team Assignments" FontAttributes="Bold" VerticalOptions="Center" />
                                        <!--<BoxView Style="{StaticResource PlaceholderStyle}" WidthRequest="15" HeightRequest="15" CornerRadius="9" HorizontalOptions="End" />-->
                                    </HorizontalStackLayout>

                                    <!-- Table content -->
