<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:badge="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      x:Class="SampleBrowser.Maui.BadgeView.SfBadgeView.Position">

    <localCore:SampleView.Content>
        <ScrollView HorizontalOptions="Center" HorizontalScrollBarVisibility="Never" VerticalScrollBarVisibility="Never">
        <VerticalStackLayout MaximumWidthRequest='{OnPlatform iOS="380", Android="380", MacCatalyst="450", WinUI="490"}' 
                             VerticalOptions="Center" HorizontalOptions="Center" Padding="10" Margin="10">
            <Grid RowDefinitions="80,80,80"
                  ColumnDefinitions='{OnPlatform WinUI="155,155,155", Default="*,*,*"}' Margin="-5,0,0,0">
                    <badge:SfBadgeView BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="TopLeft"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}" />
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="TopLeft"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                    <badge:SfBadgeView Grid.Column="1"
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="Top"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}" />
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="Top"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                    <badge:SfBadgeView Grid.Column="2"
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="TopRight"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}" />
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="TopRight"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                    <badge:SfBadgeView Grid.Row="1" 
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="Left"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}" />
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="Left"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                    <badge:SfBadgeView Grid.Row="1"
                                   Grid.Column="2"
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="Right"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}"
                                 />
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="Right"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                <badge:SfBadgeView Grid.Row="2"
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="BottomLeft"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}" />
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="BottomLeft"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                    <badge:SfBadgeView Grid.Row="2"
                                   Grid.Column="1"
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="Bottom"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}"/>
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="Bottom"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>

                    <badge:SfBadgeView Grid.Row="2"
                                   Grid.Column="2"
                                   BadgeText="5" Margin="10">
                        <Button BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource Border}}"
                                CornerRadius="8"
                                Text="BottomRight"
                                FontSize="16"
                                TextColor="{AppThemeBinding Light={StaticResource TileTextColourAlt1Light}, Dark={StaticResource TileTextColourAlt1}}"/>
                        <badge:SfBadgeView.BadgeSettings>
                        <badge:BadgeSettings Position="BottomRight"/>
                    </badge:SfBadgeView.BadgeSettings>
                </badge:SfBadgeView>
            </Grid>
        </VerticalStackLayout>
        </ScrollView>
    </localCore:SampleView.Content>
</localCore:SampleView>