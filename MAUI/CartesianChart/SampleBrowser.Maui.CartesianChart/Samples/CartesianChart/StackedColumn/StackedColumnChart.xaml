<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.CartesianChart.SfCartesianChart.StackedColumnChart"
             xmlns:local="clr-namespace:SampleBrowser.Maui.CartesianChart.SfCartesianChart"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             xmlns:converter="clr-namespace:Syncfusion.Maui.Core.Converters;assembly=Syncfusion.Maui.Core"
             xmlns:chart="http://schemas.syncfusion.com/maui"
             x:DataType="local:StackedColumnViewModel">
    <localCore:SampleView.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <local:CartesianChartColorResources/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <local:TooltipValuesConverter x:Key="ValueConverter"/>
        <converter:BrushToColorConverter x:Key="brushToColor" />
        <DataTemplate x:Key="tooltipTemplate">
            <HorizontalStackLayout Spacing="10" x:DataType="chart:TooltipInfo">
                <Label Text="{Binding Item,Converter={StaticResource ValueConverter},ConverterParameter='Value',StringFormat='{0}B'}" FontSize="14"
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
            </HorizontalStackLayout>
        </DataTemplate>

        <Label x:Key="title" x:Name="titleName" Text="Global Revenue of the Unilever Group"
                           FontSize="16" HorizontalOptions="Fill" VerticalOptions="Center" HorizontalTextAlignment="Center"
                          LineBreakMode="WordWrap" Padding="0,0,0,5"/>
    </localCore:SampleView.Resources>
    <localCore:SampleView.Content>
        <Grid>
            <Grid.BindingContext>
                <local:StackedColumnViewModel />
            </Grid.BindingContext>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <chart:SfCartesianChart Grid.Row="0" x:Name="chart" Title="{StaticResource title}" PaletteBrushes="{AppThemeBinding Light={StaticResource PaletteBrushesLight}, Dark={StaticResource PaletteBrushesDark}}" HorizontalOptions="Fill" VerticalOptions="Fill" >

                <chart:SfCartesianChart.XAxes>
                <chart:CategoryAxis x:Name="xAxis" LabelPlacement="BetweenTicks" IsVisible="true" ShowMajorGridLines="false">
                </chart:CategoryAxis>
            </chart:SfCartesianChart.XAxes>

            <chart:SfCartesianChart.YAxes >
                    <chart:NumericalAxis x:Name="yAxis" ShowMajorGridLines="True" ShowMinorGridLines="false" Minimum="0" Maximum="63" Interval="10">
                        <chart:NumericalAxis.LabelStyle>
                            <chart:ChartAxisLabelStyle LabelFormat="0'B" />
                        </chart:NumericalAxis.LabelStyle>
                    </chart:NumericalAxis>
            </chart:SfCartesianChart.YAxes>
            
            <chart:SfCartesianChart.Legend>
                <chart:ChartLegend ToggleSeriesVisibility="True"/>
            </chart:SfCartesianChart.Legend>

            <chart:StackingColumnSeries XBindingPath="Name"
                                        YBindingPath="Value"
                                        ItemsSource="{Binding RevenueData}"
                                        EnableAnimation="True"
                                        Label="Personal care"
                                        ShowDataLabels="True"
                                        TooltipTemplate="{StaticResource tooltipTemplate}"
                                        LegendIcon="SeriesType"/>

            <chart:StackingColumnSeries  XBindingPath="Name"
                                         YBindingPath="High"
                                         ItemsSource="{Binding RevenueData}"
                                         EnableAnimation="True"
                                         Label="Home care"
                                         ShowDataLabels="True"
                                         TooltipTemplate="{StaticResource tooltipTemplate}"
                                         LegendIcon="SeriesType"/>

            <chart:StackingColumnSeries XBindingPath="Name"
                                        YBindingPath="Low"
                                        ItemsSource="{Binding RevenueData}"
                                        EnableAnimation="True"
                                        Label="Foods and refreshment"
                                        ShowDataLabels="True"
                                        TooltipTemplate="{StaticResource tooltipTemplate}"
                                        LegendIcon="SeriesType"/>
        </chart:SfCartesianChart>
            <HorizontalStackLayout Grid.Row="1" x:Name="hyperLinkLayout" x:DataType="local:BaseViewModel" Margin="5,5,0,0">
            <Label Text="Source: " FontSize="12" VerticalOptions="Center"></Label>
                <Label TextColor="#3E8EED" FontSize="12" FontAttributes="Italic" Text=" statista.com" VerticalOptions="Center">
                <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding TapCommand}" CommandParameter="https://www.statista.com/statistics/269200/revenue-of-the-unilever-group-worldwide-by-product-segment/"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>
        </Grid>
    </localCore:SampleView.Content>
   
</localCore:SampleView>
