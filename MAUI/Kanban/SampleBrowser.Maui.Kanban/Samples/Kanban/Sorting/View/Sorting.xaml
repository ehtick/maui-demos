                                        Padding="12,6"
                                        Background="{AppThemeBinding Light=#F6EDFF, Dark=#381E72}">
                                    <Label Text="{Binding .}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=#6750A4, Dark=#D0BCFF}" />
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                    <progressbar:SfLinearProgressBar Grid.Row="4" Minimum="0" Maximum="100" Margin="-12,0,-12,0" TrackFill="Transparent"
