                      xmlns:local="clr-namespace:SampleBrowser.Maui.Kanban.SfKanban">

    <localCore:SampleView.BindingContext>
        <local:SortingViewModel/>
    </localCore:SampleView.BindingContext>

    <localCore:SampleView.Resources>
        <ResourceDictionary>
            <Style x:Key="PriorityLabelStyle" TargetType="Label">
                <!-- default color -->
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#444444, Dark=#DDDDDD}" />
                <Style.Triggers>
                    <DataTrigger TargetType="Label" Binding="{Binding Priority}" Value="Low">
                        <Setter Property="TextColor" Value="{DynamicResource ContentForegroundAlt1}" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Priority}" Value="Medium">
                        <Setter Property="TextColor" Value="{DynamicResource SuccessForeground}" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Priority}" Value="High">
                        <Setter Property="TextColor" Value="{DynamicResource WarningForeground}" />
                    </DataTrigger>
                    <DataTrigger TargetType="Label" Binding="{Binding Priority}" Value="Critical">
                        <Setter Property="TextColor" Value="{AppThemeBinding Light=#C50F1F, Dark=#FF4B5B}" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Color x:Key="LightToDoHeaderStrokeColor">#6750A4</Color>
            <Color x:Key="DarkToDoHeaderStrokeColor">#D0BCFF</Color>
            <Color x:Key="LightInprogressHeaderStrokeColor">#914C00</Color>
            <Color x:Key="DarkInprogressHeaderStrokeColor">#FFB77F</Color>
            <Color x:Key="LightReviewHeaderStrokeColor">#B3261E</Color>
            <Color x:Key="DarkReviewHeaderStrokeColor">#F2B8B5</Color>
            <Color x:Key="LightDoneHeaderStrokeColor">#026B6E</Color>
            <Color x:Key="DarkDoneHeaderStrokeColor">#10F3FA</Color>
            <Color x:Key="LightHeaderTextColor">#49454F</Color>
            <Color x:Key="DarkHeaderTextColor">#CAC4D0</Color>
            <Color x:Key="LightToDoHeaderTextColor">#6750A4</Color>
            <Color x:Key="DarkToDoHeaderTextColor">#D0BCFF</Color>
            <Color x:Key="LightInprogressHeaderTextColor">#914C00</Color>
            <Color x:Key="DarkInprogressHeaderTextColor">#FFB77F</Color>
            <Color x:Key="LightReviewHeaderTextColor">#B3261E</Color>
            <Color x:Key="DarkReviewHeaderTextColor">#F2B8B5</Color>
            <Color x:Key="LightCardTextColor">#1C1B1F</Color>
            <Color x:Key="DarkCardTextColor">#E6E1E5</Color>
            <Color x:Key="LightBorderColor">#FFFBFE</Color>
        </ResourceDictionary>

        <!-- NoCardTemplate -->
         <DataTemplate x:Key="NoCardTemplate">
            <Label Text="No Cards to Display"
                   FontSize="14"
                   TextColor="{DynamicResource ContentForegroundAlt1}"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </DataTemplate>

        <!-- PlaceholderStyles -->
        <kanban:KanbanPlaceholderStyle  x:Key="ToDoPlaceholderStyle"
                                        Background="Transparent"
                                        SelectionIndicatorBackground="Transparent"
                                        SelectionIndicatorStroke="{AppThemeBinding Light={StaticResource LightToDoHeaderStrokeColor}, Dark={StaticResource DarkToDoHeaderStrokeColor}}">
        </kanban:KanbanPlaceholderStyle>
        <kanban:KanbanPlaceholderStyle  x:Key="InProgressPlaceholderStyle"
                                        Background="Transparent"
                                        SelectionIndicatorBackground="Transparent"
                                        SelectionIndicatorStroke="{AppThemeBinding Light={StaticResource LightInprogressHeaderStrokeColor}, Dark={StaticResource DarkInprogressHeaderStrokeColor}}">
        </kanban:KanbanPlaceholderStyle>
        <kanban:KanbanPlaceholderStyle  x:Key="ReviewPlaceholderStyle"
                                        SelectionIndicatorBackground="Transparent"
                                        Background="Transparent"
                                        SelectionIndicatorStroke="{DynamicResource ErrorBorder}">
        </kanban:KanbanPlaceholderStyle>
        <kanban:KanbanPlaceholderStyle  x:Key="DonePlaceholderStyle"
                                        SelectionIndicatorBackground="Transparent"
                                        Background="Transparent"
                                        SelectionIndicatorStroke="{DynamicResource SuccessBorder}">
        </kanban:KanbanPlaceholderStyle>

