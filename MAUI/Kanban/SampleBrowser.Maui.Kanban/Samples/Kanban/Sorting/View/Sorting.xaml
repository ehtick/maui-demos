        <!-- Card templates -->
        <DataTemplate x:Key="ToDoCardTemplate">
            <Border StrokeShape="RoundRectangle 12" Opacity="5" Padding="12,12,12,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.00" Color="{AppThemeBinding Light=#0D6750A4, Dark=#0DD0BCFF}"/>
                        <GradientStop Offset="0.20" Color="{AppThemeBinding Light=#1A6750A4, Dark=#1AD0BCFF}"/>
                        <GradientStop Offset="1.00" Color="{AppThemeBinding Light=#006750A4, Dark=#00D0BCFF}"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                        <Border Background="{AppThemeBinding Light={StaticResource LightBorderColor}, Dark={StaticResource LightCardTextColor}}"
                                StrokeThickness="0" HeightRequest="22" 
                                StrokeShape="RoundRectangle 20"
                                Padding="8,4">
                            <HorizontalStackLayout Spacing="4" 
                                                   Margin="{OnPlatform Android = '0,-2,0,0'}"  
                                                   VerticalOptions="Center">
                                <Label Text="•" FontSize="15"
                                       Style="{StaticResource PriorityLabelStyle}"
                                       Margin="{OnPlatform Android = '0,-2,0,0'}"
                                       VerticalTextAlignment="Center"/>
                                <Label Text="{Binding Priority}" FontSize="12"
                                       Style="{StaticResource PriorityLabelStyle}"
                                       VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                        </Border>
                        <Label Grid.Column="1"
                               HorizontalOptions="End"
                               Text="{Binding Index, StringFormat='Rank #{0}'}"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light={StaticResource LightDoneHeaderStrokeColor}, Dark={StaticResource DarkDoneHeaderStrokeColor}}"
                               VerticalTextAlignment="Center"/>
                    </Grid>

                    <Label Grid.Row="1"
                           Text="{Binding Title}"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource LightCardTextColor}, Dark={StaticResource DarkCardTextColor}}"/>
                    <Label Grid.Row="2"
                           Text="{Binding Description}"
                           FontSize="12"
                           LineBreakMode="WordWrap"
                           TextColor="{AppThemeBinding Light={StaticResource LightCardTextColor}, Dark={StaticResource DarkCardTextColor}}"/>

                    <HorizontalStackLayout Grid.Row="3"
                                           Spacing="10"
                                           BindableLayout.ItemsSource="{Binding Tags}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeShape="RoundRectangle 12"
                                        StrokeThickness="0"
                                        Padding="12,6"
                                        Background="{AppThemeBinding Light=#F6EDFF, Dark=#381E72}">
                                    <Label Text="{Binding .}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=#6750A4, Dark=#D0BCFF}" />
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                </Grid>
            </Border>
        </DataTemplate>

