                                    <Label Text="{Binding .}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=#6750A4, Dark=#D0BCFF}" />
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                    <progressbar:SfLinearProgressBar Grid.Row="4" Minimum="0" Maximum="100" TrackFill="Transparent" Margin="-12,0,-12,0"
                                                     ProgressFill="{AppThemeBinding Light={StaticResource ErrorBorder}, Dark={StaticResource ErrorBorder}}"
                                                     Progress="{Binding Progress}" HeightRequest="3"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="DoneCardTemplate">
            <Border StrokeShape="RoundRectangle 12" Padding="12,12,12,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0.00" Color="{AppThemeBinding Light=#00026B6E, Dark=#0D10F3FA}"/>
                        <GradientStop Offset="0.20" Color="{AppThemeBinding Light=#1A026B6E, Dark=#1A10F3FA}"/>
                        <GradientStop Offset="1.00" Color="{AppThemeBinding Light=#00026B6E, Dark=#0010F3FA}"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                        <Border Background="{AppThemeBinding Light={StaticResource LightBorderColor}, Dark={StaticResource LightCardTextColor}}"
                                StrokeThickness="0" 
                                HeightRequest="22" 
                                StrokeShape="RoundRectangle 20"
                                Padding="8,4">
                            <HorizontalStackLayout Spacing="4" 
                                                   Margin="{OnPlatform Android = '0,-2,0,0'}" 
                                                   VerticalOptions="Center">
                                <Label Text="•" FontSize="15"
                                       Style="{StaticResource PriorityLabelStyle}"
                                       Margin="{OnPlatform Android = '0,-2,0,0'}"
                                       VerticalTextAlignment="Center"/>
                                <Label Text="{Binding Priority}" FontSize="12"
                                       Style="{StaticResource PriorityLabelStyle}"
                                       VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                        </Border>
                        <Label Grid.Column="1"
                               HorizontalOptions="End"
                               Text="{Binding Index, StringFormat='Rank #{0}'}"
                               FontSize="12"
                               TextColor="{AppThemeBinding Light={StaticResource LightDoneHeaderStrokeColor}, Dark={StaticResource DarkDoneHeaderStrokeColor}}"
                               VerticalTextAlignment="Center"/>
                    </Grid>
                    <Label Grid.Row="1"
                           Text="{Binding Title}"
                           FontAttributes="Bold"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource LightCardTextColor}, Dark={StaticResource DarkCardTextColor}}"/>
                    <Label Grid.Row="2"
                           Text="{Binding Description}"
                           FontSize="12"
                           LineBreakMode="WordWrap"
                           TextColor="{AppThemeBinding Light={StaticResource LightCardTextColor}, Dark={StaticResource DarkCardTextColor}}"/>
                    <HorizontalStackLayout Grid.Row="3" Spacing="10" BindableLayout.ItemsSource="{Binding Tags}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border StrokeShape="RoundRectangle 12"
                                        StrokeThickness="0"
                                        Padding="12,6"
                                        Background="{AppThemeBinding Light=#F6EDFF, Dark=#381E72}">
                                    <Label Text="{Binding .}"
                                           FontSize="12"
                                           TextColor="{AppThemeBinding Light=#6750A4, Dark=#D0BCFF}" />
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                    <progressbar:SfLinearProgressBar Grid.Row="4" ProgressFill="{DynamicResource SuccessBorder}" TrackFill="Transparent" Minimum="0"
                                                     Maximum="100" Margin="-12,0,-12,0" Progress="{Binding Progress}" HeightRequest="3"/>
                </Grid>
            </Border>
        </DataTemplate>

        <local:KanbanCardTemplateSelector x:Key="CardTemplateSelector" 
                                          ToDoTemplate="{StaticResource ToDoCardTemplate}"
                                          InProgressTemplate="{StaticResource InProgressCardTemplate}"
                                          ReviewTemplate="{StaticResource ReviewCardTemplate}"
                                          DoneTemplate="{StaticResource DoneCardTemplate}"/>

        <local:KanbanHeaderTemplateSelector x:Key="HeaderTemplateSelector"
                                            ToDoTemplate="{StaticResource ToDoHeaderTemplate}"
                                            InProgressTemplate="{StaticResource InProgressHeaderTemplate}"
                                            ReviewTemplate="{StaticResource ReviewHeaderTemplate}"
                                            DoneTemplate="{StaticResource DoneHeaderTemplate}"/>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <kanban:SfKanban x:Name="kanban" 
                         SortingMappingPath="Index"
                         SortingOrder="Ascending"
                         AutoGenerateColumns="false"
                         ItemsSource="{Binding Cards}"
                         ColumnMappingPath="Category"
                         CardTemplate="{StaticResource CardTemplateSelector}"
                         HeaderTemplate="{StaticResource HeaderTemplateSelector}">
            <kanban:KanbanColumn Title="Open" 
                                 Categories="Open" 
                                 Background="Transparent"
                                 PlaceholderStyle="{StaticResource ToDoPlaceholderStyle}"
                                 NoCardTemplate="{StaticResource NoCardTemplate}"/>
            <kanban:KanbanColumn Title="In Progress" 
                                 Categories="In Progress" 
                                 Background="Transparent"
                                 PlaceholderStyle="{StaticResource InProgressPlaceholderStyle}"
                                 NoCardTemplate="{StaticResource NoCardTemplate}"/>
            <kanban:KanbanColumn Title="Code Review" 
                                 Categories="Code Review"
                                 Background="Transparent"
                                 PlaceholderStyle="{StaticResource ReviewPlaceholderStyle}"
                                 NoCardTemplate="{StaticResource NoCardTemplate}"/>
            <kanban:KanbanColumn Title="Done" 
                                 AllowDrag="False"
                                 Categories="Done" 
                                 Background="Transparent"
                                 PlaceholderStyle="{StaticResource DonePlaceholderStyle}"
                                 NoCardTemplate="{StaticResource NoCardTemplate}"/>
        </kanban:SfKanban>
    </localCore:SampleView.Content>

    <localCore:SampleView.OptionView>
        <ContentView>
            <ScrollView>
                <VerticalStackLayout Spacing="5">
                    <inputLayout:SfTextInputLayout x:Name="sortBySelection" 
                                                   Hint="SortBy" 
                                                   ContainerType="Filled"
                                                   ContainerBackground="Transparent">
                        <editors:SfComboBox x:Name="sortByComboBox" 
                                            SelectedIndex="0"
                                            IsClearButtonVisible="False">
                            <editors:SfComboBox.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Index</x:String>
                                    <x:String>Custom</x:String>
                                    <x:String>ItemSource Order</x:String>
                                </x:Array>
                            </editors:SfComboBox.ItemsSource>
                        </editors:SfComboBox>
                    </inputLayout:SfTextInputLayout>

                    <inputLayout:SfTextInputLayout x:Name="directionSelection"
                                                   Hint="Direction"
                                                   ContainerType="Filled"
                                                   ContainerBackground="Transparent">
                        <editors:SfComboBox x:Name="sortOrderComboBox"
                                            SelectedIndex="0"
                                            IsClearButtonVisible="False">
                            <editors:SfComboBox.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Ascending</x:String>
                                    <x:String>Descending</x:String>
                                </x:Array>
                            </editors:SfComboBox.ItemsSource>
                        </editors:SfComboBox>
                    </inputLayout:SfTextInputLayout>

                    <inputLayout:SfTextInputLayout x:Name="mappingPathSelection" 
                                                   Hint="SortingMappingPath"
                                                   ContainerType="Filled"
                                                   ContainerBackground="Transparent">
                        <editors:SfComboBox x:Name="mappingPathComboBox"
                                            SelectedIndex="1"
                                            IsClearButtonVisible="False">
                            <editors:SfComboBox.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Title</x:String>
                                    <x:String>Index</x:String>
                                    <x:String>Priority</x:String>
                                </x:Array>
                            </editors:SfComboBox.ItemsSource>
                        </editors:SfComboBox>
                    </inputLayout:SfTextInputLayout>
                </VerticalStackLayout>
            </ScrollView>
        </ContentView>
    </localCore:SampleView.OptionView>
    <localCore:SampleView.Behaviors>
        <local:SortingBehavior/>
    </localCore:SampleView.Behaviors>
</localCore:SampleView>