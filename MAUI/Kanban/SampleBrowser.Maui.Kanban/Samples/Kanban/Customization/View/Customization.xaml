    <localCore:SampleView.Content>
        <kanban:SfKanban x:Name="kanban" 
                         AutoGenerateColumns="False"  
                         HorizontalOptions="Fill"
					     VerticalOptions="Fill" 
                         ItemsSource="{Binding MenuItems}"
					     CardTemplate="{StaticResource CardTemplateSelector}"
                         DragEnd="OnHandleDragEnd"
                         HeaderTemplate="{StaticResource HeaderTemplateSelector}"
                         MinimumHeaderHeight="46">
            <kanban:SfKanban.Columns>
                <kanban:KanbanColumn Title ="Menu"
                                     Categories="Menu"
                                     AllowDrop="False"
                                     Background="{AppThemeBinding Light={StaticResource LightMenuBackgroundColor}, Dark={StaticResource DarkMenuBackgroundColor}}">
