                        <kanban:KanbanErrorBarSettings Height="2" 
                                                       Fill="{AppThemeBinding Light={StaticResource LightOrderColor}, Dark={StaticResource DarkOrderColor}}"/>
                    </kanban:KanbanColumn.ErrorBarSettings>
                </kanban:KanbanColumn>
                <kanban:KanbanColumn Title="Ready to Serve"
