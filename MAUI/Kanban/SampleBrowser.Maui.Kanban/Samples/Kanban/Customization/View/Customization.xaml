                                                       Fill="{AppThemeBinding Light={StaticResource DeliveryColor}, Dark={StaticResource DarkDeliveryColor}}"/>
                    </kanban:KanbanColumn.ErrorBarSettings>
                </kanban:KanbanColumn>
            </kanban:SfKanban.Columns>
        </kanban:SfKanban>
