                                     Categories="Order for Dining, Order for Delivery"
                                     Background="{AppThemeBinding Light={StaticResource LightOrderBackgroundColor}, Dark={StaticResource DarkOrderBackgroundColor}}"
                                     PlaceholderStyle="{StaticResource OrderPlaceholderStyle}"
                                     NoCardTemplate="{StaticResource NoCardTemplate}">
