<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.TreeView.TreeViewStyles">

    <Style TargetType="Border" x:Key="TreeViewBorder">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"/>
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource TextColour1}, Dark={StaticResource Border}}"/>
        <Setter Property="StrokeThickness" Value="{OnPlatform Default=0, WinUI=1, MacCatalyst=1}"/>
        <Setter Property="VerticalOptions" Value="{OnPlatform MacCatalyst=Center}"/>
        <Setter Property="HorizontalOptions" Value="{OnPlatform WinUI=Center, MacCatalyst=Center, Default=Fill}"/>
        <Setter Property="MaximumWidthRequest" Value="{OnPlatform WinUI=380, MacCatalyst=400}"/>
    </Style>

    <Style TargetType="RoundRectangle" x:Key="roundedRectangle">
        <Setter Property="CornerRadius" Value="{OnPlatform Default=0,WinUI=10,MacCatalyst=10}"/>
    </Style>

</ResourceDictionary>