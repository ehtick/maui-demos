<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleBrowser.Maui.DataGrid.SfDataGrid.Clipboard"
             xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
             xmlns:local="clr-namespace:SampleBrowser.Maui.DataGrid"
             xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
             xmlns:sfgrid="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
             xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup">
    
    <localCore:SampleView.BindingContext>
        <local:OrderInfoViewModel x:Name="viewModel">
        </local:OrderInfoViewModel>
    </localCore:SampleView.BindingContext>

    <localCore:SampleView.Behaviors>
        <local:ClipboardBehavior />
    </localCore:SampleView.Behaviors>

    <localCore:SampleView.Resources>
        <Style TargetType="sfgrid:DataGridHeaderCell">
            <Setter Property="FontFamily"
                Value="Roboto-Medium" />
            <Setter Property="FontSize"
                Value="14" />
            <Setter Property="Padding">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS,WinUI,MacCatalyst"
                            Value="16,14" />
                        <On Platform="Android"
                            Value="16,17" />
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="sfgrid:DataGridCell">
            <Setter Property="FontSize"
                Value="14" />
        </Style>
        <Color x:Key="lightThemeColor">#F7F2FB</Color>
        <Color x:Key="darkThemeColor">#25232A</Color>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>

        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height='130' />
            </Grid.RowDefinitions>
            <popup:SfPopup  x:Name="contextMenuPopup" ShowHeader="False" WidthRequest="270" HeightRequest="50"  BindingContext="{Binding}" 
                            ShowOverlayAlways="False" IsOpen="False" >
                <popup:SfPopup.ContentTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout  Spacing="16" HorizontalOptions="Center" VerticalOptions="Center"  HeightRequest="50"  WidthRequest="320" BackgroundColor="{AppThemeBinding Light={StaticResource lightThemeColor}, Dark={StaticResource darkThemeColor}}">

                            <Border  StrokeThickness="0"  Padding="20,6" >
                                <Label Text="Copy"
                                       FontSize="16"
                                       FontFamily="Roboto"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center" > 
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ContextMenuCommand}" CommandParameter="Copy" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                            <Border StrokeThickness="0"  Padding="2,6" >
                                <Label Text="Cut"
                                       FontSize="16"
                                       FontFamily="Roboto"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ContextMenuCommand}" CommandParameter="Cut" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                            <Border  StrokeThickness="0"  Padding="17,6" >
                                <Label Text="Paste"
                                       FontSize="16"
                                       FontFamily="Roboto"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ContextMenuCommand}" CommandParameter="Paste" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                            <Border  StrokeThickness="0" Padding="4,6" >
                                <Label Text="Select All"
                                       FontSize="16"
                                       FontFamily="Roboto"
                                       VerticalOptions="Center"
                                       HorizontalOptions="Center">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding ContextMenuCommand}" CommandParameter="Select All" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Border>

                        </HorizontalStackLayout>
                    </DataTemplate>
                </popup:SfPopup.ContentTemplate>

                <popup:SfPopup.PopupStyle>
                    <popup:PopupStyle CornerRadius="5" PopupBackground="{AppThemeBinding Light={StaticResource lightThemeColor}, Dark={StaticResource darkThemeColor}}"
                                       StrokeThickness="1" Stroke="Gray">
                    </popup:PopupStyle>
                </popup:SfPopup.PopupStyle>
            </popup:SfPopup>

            <sfgrid:SfDataGrid x:Name="dataGrid"
                               Grid.Row="0"
                               Margin='{OnPlatform WinUI="-5",MacCatalyst="-5"}'
                               AutoGenerateColumnsMode="None"
                               HeaderRowHeight="52"
                               SelectionMode="Multiple"
                               NavigationMode="Cell"
                               GridLinesVisibility="Both"
                               HeaderGridLinesVisibility="Both"
                               SelectedRows="{Binding DataGridSelectedItems}"
                               RowHeight="48"
                               x:DataType="local:OrderInfoViewModel"
                               ItemsSource="{Binding OrdersInfo}"
                               ColumnWidthMode="Fill"
                               HorizontalScrollBarVisibility="Always"
                               VerticalScrollBarVisibility="Always"
                               AllowEditing="True">

                <sfgrid:SfDataGrid.Columns>
                    <sfgrid:DataGridNumericColumn Format="D" MappingName="OrderID"  HeaderText="Order ID" Width="{OnPlatform Android='110', iOS='110'}" />

                    <sfgrid:DataGridTextColumn MappingName="FirstName" HeaderText="Name"  Width="{OnPlatform Android='80', iOS='80'}"/>

                    <sfgrid:DataGridTextColumn MappingName="CustomerID" HeaderText="Customer ID" Width="{OnPlatform Android='120', iOS='110'}" />

                    <sfgrid:DataGridTextColumn MappingName="ShipCity" HeaderText="City"  Width="{OnPlatform Android='90', iOS='90'}"/>

                    <sfgrid:DataGridTextColumn MappingName="ShipCountry" HeaderText="Country" Width="{OnPlatform Android='90', iOS='90'}"/>

                    <sfgrid:DataGridTextColumn MappingName="Gender" HeaderText="Gender" Visible="False"/>

                </sfgrid:SfDataGrid.Columns>

            </sfgrid:SfDataGrid>

            <ContentView Grid.Row="1" HorizontalOptions="Fill" Padding='{OnPlatform Android="0,8,0,0",MacCatalyst="-5,8,-5,-5", WinUI="-5,8,-3.4,-5" }'>
                <Border Stroke="#CAC4D0" StrokeThickness="0.55" Padding="10">
                    <Grid RowDefinitions="Auto, *, Auto">
 
                        <Label Grid.Row="0"
                               Text="Clipboard Content"
                               FontAttributes="Bold"
                               FontSize="16"
                               HorizontalOptions="Start"
                               Margin="0,0,0,5"
                               Padding="0,2,0,2" />


                        <ScrollView Grid.Row="1" Orientation="Both">
                            <Label x:Name="clipboard"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Start"
                                   HorizontalOptions="Start"
                                   Padding="0,3,0,0" 
                                   FontSize="16"/>
                        </ScrollView>

                       
                        <BoxView Grid.Row="2"
                                 HeightRequest="1"
                                 BackgroundColor="#49454F"
                                 HorizontalOptions="Fill"
                                 Margin="0,10,0,0" />
                    </Grid>
                </Border>
            </ContentView>

        </Grid>
    </localCore:SampleView.Content>

    <localCore:SampleView.OptionView >
        <ContentView>
            <Grid ColumnSpacing="10"
                  RowSpacing="10"
                  Padding="20">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="83" />
                    <ColumnDefinition Width="163" />
                    <ColumnDefinition Width="83" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0"
                       Grid.Column="0"
                       HorizontalOptions="Start"
                       Text="Selection Unit"
                       VerticalOptions="Center"
                       LineBreakMode="WordWrap"
                       FontSize="15">
                </Label>
                
                <editors:SfComboBox  x:Name="selectionUnitComboBox"
                                     Grid.Row="0"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Start">
                        <editors:SfComboBox.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Row</x:String>
                                <x:String>Cell</x:String>
                            </x:Array>
                        </editors:SfComboBox.ItemsSource>

                        <editors:SfComboBox.SelectedItem>
                            <x:String>Row</x:String>
                        </editors:SfComboBox.SelectedItem>
                </editors:SfComboBox>
                
                <Label Grid.Row="1"
                       Grid.Column="0"
                       HorizontalOptions="Start"
                       Text="Selection Mode"
                       VerticalOptions="Center"
                       LineBreakMode="WordWrap"
                       FontSize="15">
                </Label>
                
                <editors:SfComboBox  x:Name="comboBox" 
                                     Grid.Row="1"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Start">
                        <editors:SfComboBox.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>None</x:String>
                                <x:String>Single</x:String>
                                <x:String>SingleDeselect</x:String>
                                <x:String>Multiple</x:String>
                            </x:Array>
                        </editors:SfComboBox.ItemsSource>

                        <editors:SfComboBox.SelectedItem>
                            <x:String>Multiple</x:String>
                        </editors:SfComboBox.SelectedItem>
                </editors:SfComboBox>
                
                <Label Grid.Row="2"
                       Grid.Column="0"
                       HorizontalOptions="Start"
                       Text="CopyOption"
                       VerticalOptions="Center"
                       LineBreakMode="WordWrap"
                       FontSize="15">
                </Label>
                
                <editors:SfComboBox  x:Name="clipboardCopyComboBox"  
                                     Grid.Row="2"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Start"
                                     SelectionMode="Multiple"
                                     DelimiterText="/"
                                     MultiSelectionDisplayMode="Delimiter"
                                     SelectedItems="{Binding SelectedCopyOptions}">
                        <editors:SfComboBox.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>None</x:String>
                                <x:String>CopyData</x:String>
                                <x:String>CutData</x:String>
                                <x:String>IncludeHeaders</x:String>
                                <x:String>IncludeFormat</x:String>
                                <x:String>IncludeHiddenColumn</x:String>
                            </x:Array>
                        </editors:SfComboBox.ItemsSource>
                </editors:SfComboBox>
                
                <Label Grid.Row="3"
                       Grid.Column="0"
                       HorizontalOptions="Start"
                       Text="PasteOption"
                       VerticalOptions="Center"
                       LineBreakMode="WordWrap"
                       FontSize="15">
                </Label>
                
                <editors:SfComboBox  x:Name="clipboardPasteComboBox"
                                     Grid.Row="3"
                                     Grid.Column="1"
                                     VerticalOptions="Center"
                                     HorizontalOptions="Start"
                                     SelectionMode="Multiple"
                                     DelimiterText="/"
                                     MultiSelectionDisplayMode="Delimiter"
                                     SelectedItems="{Binding SelectedPasteOptions}">
                        <editors:SfComboBox.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>None</x:String>
                                <x:String>PasteData</x:String>
                                <x:String>ExcludeFirstLine</x:String>
                                <x:String>IncludeHiddenColumn</x:String>
                            </x:Array>
                        </editors:SfComboBox.ItemsSource>
                </editors:SfComboBox>
                
            </Grid>
        </ContentView>
    </localCore:SampleView.OptionView>
</localCore:SampleView>