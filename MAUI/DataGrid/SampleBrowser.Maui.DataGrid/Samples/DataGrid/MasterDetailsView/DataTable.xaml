<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.DataGrid.SfDataGrid.DataTable"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:tabView="clr-namespace:Syncfusion.Maui.TabView;assembly=Syncfusion.Maui.TabView"
                      xmlns:local="clr-namespace:SampleBrowser.Maui.DataGrid"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:sfgrid="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid">

    <localCore:SampleView.BindingContext>
        <local:DetailsViewDataViewModel/>
    </localCore:SampleView.BindingContext>

    <localCore:SampleView.Resources>
        <OnPlatform x:Key="customerIDWidth" x:TypeArguments="x:Double">
            <On Platform="Android" Value="110" />
        </OnPlatform>
        <Style TargetType="sfgrid:DataGridHeaderCell">
            <Setter Property="FontFamily"
                    Value="Roboto-Medium" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Padding">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS,WinUI,MacCatalyst"
                            Value="16,14" />
                        <On Platform="Android"
                            Value="16,17" />
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="sfgrid:DataGridCell">
            <Setter Property="FontSize"
                    Value="14" />
        </Style>
    </localCore:SampleView.Resources>

    <localCore:SampleView.Content>
        <sfgrid:SfDataGrid Margin='{OnPlatform WinUI="-5",MacCatalyst="-5"}'
                           x:Name="dataGrid"
                           HeaderRowHeight="52" 
                           RowHeight="48"
                           ColumnWidthMode='{OnPlatform WinUI="Fill",MacCatalyst="Fill", Android="FitByHeader", iOS="FitByHeader"}'
                           AutoGenerateRelations="False"
                           AutoGenerateColumnsMode="None"
                           DetailsViewPadding="20,5,5,5"
                           HorizontalScrollBarVisibility="Always"
                           VerticalScrollBarVisibility="Always"
                           ItemsSource="{Binding Orders}"
                           DataGridLoaded="dataGrid_DataGridLoaded">
            <sfgrid:SfDataGrid.Columns>
                <sfgrid:DataGridNumericColumn Format="D" MappingName="OrderID" HeaderText="Order ID"/>
                <sfgrid:DataGridTextColumn MappingName="CustomerID" HeaderText="Customer ID" Width="{StaticResource customerIDWidth}"/>
                <sfgrid:DataGridDateColumn MappingName="ShippingDate" HeaderText="Shipped Date"/>
                <sfgrid:DataGridNumericColumn Format="D" MappingName="SupplierID" HeaderText="Supplier ID" />
                <sfgrid:DataGridTextColumn MappingName="ShipCity" HeaderText="Ship City"/>
                <sfgrid:DataGridTextColumn MappingName="ShipCountry" HeaderText="Ship Country"/>
                <sfgrid:DataGridNumericColumn Format="C" MappingName="Freight" HeaderText="Freight"/>
            </sfgrid:SfDataGrid.Columns>
            <sfgrid:SfDataGrid.DetailsViewDefinition>
                <sfgrid:DataGridViewDefinition RelationalColumn="Orders_OrderDetails">
                    <sfgrid:DataGridViewDefinition.DataGrid>
                        <sfgrid:SfDataGrid x:Name="firstInnerGrid"
                                          HeaderRowHeight="52"
                                           AutoGenerateColumnsMode="None"
                                          RowHeight="48" 
                                          DefaultColumnWidth="{OnPlatform WinUI=120, MacCatalyst=120}">
                            <sfgrid:SfDataGrid.Columns>
                                <sfgrid:DataGridNumericColumn Format="D" MappingName="OrderID" HeaderText="Order ID"/>
                                <sfgrid:DataGridNumericColumn Format="D" MappingName="ProductID" HeaderText="Product ID"/>
                                <sfgrid:DataGridNumericColumn Format="C" MappingName="UnitPrice" HeaderText="Unit Price"/>
                                <sfgrid:DataGridNumericColumn Format="D" MappingName="Quantity" HeaderText="Quantity"/>
                                <sfgrid:DataGridNumericColumn Format="C" MappingName="Discount" HeaderText="Discount" />
                                <sfgrid:DataGridDateColumn MappingName="OrderDate" HeaderText="Order Date"/>
                            </sfgrid:SfDataGrid.Columns>
                        </sfgrid:SfDataGrid>
                    </sfgrid:DataGridViewDefinition.DataGrid>
                </sfgrid:DataGridViewDefinition>
            </sfgrid:SfDataGrid.DetailsViewDefinition>
        </sfgrid:SfDataGrid>
    </localCore:SampleView.Content>
</localCore:SampleView>
