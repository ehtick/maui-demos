<?xml version="1.0" encoding="utf-8" ?>
<localCore:SampleView x:Class="SampleBrowser.Maui.DataGrid.SfDataGrid.MasterDetailsViewColumnType"
                      xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:local="clr-namespace:SampleBrowser.Maui.DataGrid"
                      xmlns:localCore="clr-namespace:SampleBrowser.Maui.Base;assembly=SampleBrowser.Maui.Base"
                      xmlns:sfgrid="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid">
    
    <localCore:SampleView.BindingContext>
        <local:DealerDetailsViewModel x:Name="viewModel"/>
    </localCore:SampleView.BindingContext>
    
    <localCore:SampleView.Resources>
        <OnPlatform x:Key="minimumWidth" x:TypeArguments="x:Double">
            <On Platform="Android,iOS" Value="120"></On>
        </OnPlatform>
        <Style TargetType="sfgrid:DataGridHeaderCell">
            <Setter Property="FontFamily"
             Value="Roboto-Medium" />
            <Setter Property="FontSize"
             Value="14" />
            <Setter Property="Padding">
                <Setter.Value>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="iOS,WinUI,MacCatalyst"
                            Value="16,14" />
                        <On Platform="Android"
                            Value="16,17" />
                    </OnPlatform>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="sfgrid:DataGridCell">
            <Setter Property="FontSize"
             Value="14" />
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="MinimumHeightRequest" Value="44"/>
            <Setter Property="MinimumWidthRequest" Value="44"/>
        </Style>
    </localCore:SampleView.Resources>
    
    <localCore:SampleView.Content>
        <sfgrid:SfDataGrid x:Name="dataGrid"
                           HeaderRowHeight="52"
                           AutoGenerateColumnsMode="None"
                           RowHeight="48"
                           ColumnWidthMode='{OnPlatform Android="Auto",WinUI="Fill",iOS="Auto",MacCatalyst="Fill"}'
                           AutoGenerateRelations="False"
                           ItemsSource="{Binding DealerList}"
                           Margin='{OnPlatform WinUI="-5",MacCatalyst="-5"}'
                           DetailsViewPadding="20,5,5,5"
                           HorizontalScrollBarVisibility="Always"
                           VerticalScrollBarVisibility="Always"
                           DataGridLoaded="dataGrid_DataGridLoaded">
            <sfgrid:SfDataGrid.Columns>
                <sfgrid:DataGridNumericColumn Format="D" MappingName="OrderID" HeaderText="Order ID"/>
                <sfgrid:DataGridTextColumn MappingName="CustomerID" HeaderText="Customer ID"/>
                <sfgrid:DataGridDateColumn MappingName="ShippingDate" HeaderText="Shipped Date" />
                <sfgrid:DataGridNumericColumn Format="D" MappingName="SupplierID" HeaderText="Supplier ID" />
                <sfgrid:DataGridTextColumn MappingName="ShipCity" HeaderText="Ship City"/>
                <sfgrid:DataGridTextColumn MappingName="ShipCountry" HeaderText="Ship Country"/>
                <sfgrid:DataGridNumericColumn Format="C" MappingName="Freight" HeaderText="Freight" />
            </sfgrid:SfDataGrid.Columns>
            <sfgrid:SfDataGrid.DetailsViewDefinition>
                
                <sfgrid:DataGridViewDefinition RelationalColumn="OrdersList">
                    <sfgrid:DataGridViewDefinition.DataGrid>
                        <sfgrid:SfDataGrid x:Name="DetailsGrid"
                                           AutoGenerateColumnsMode="None"                                         
                                           DefaultColumnWidth="{OnPlatform WinUI=120, MacCatalyst=120}">

                            <sfgrid:SfDataGrid.Columns>
                                <sfgrid:DataGridImageColumn HeaderText="Dealer"
                                                            MappingName="DealerImage"
                                                            CellPadding="8"/>
                                <sfgrid:DataGridNumericColumn Format="D"
                                                              HeaderText="Order ID"
                                                              MappingName="OrderID"/>
                                <sfgrid:DataGridTextColumn   HeaderText="Name"
                                                             MappingName="DealerName"/>
                                <sfgrid:DataGridDateColumn HeaderText="Order Date"
                                                           MappingName="OrderDate"/>
                                <sfgrid:DataGridCheckBoxColumn HeaderText="Is Shipped"
                                                              MappingName="IsOnline"
                                                              MinimumWidth="{StaticResource minimumWidth}" 
                                                              AllowEditing="True"/>
                            </sfgrid:SfDataGrid.Columns>
                        </sfgrid:SfDataGrid>
                        
                    </sfgrid:DataGridViewDefinition.DataGrid>
                </sfgrid:DataGridViewDefinition>
            </sfgrid:SfDataGrid.DetailsViewDefinition>
        </sfgrid:SfDataGrid>
    </localCore:SampleView.Content>
</localCore:SampleView>
